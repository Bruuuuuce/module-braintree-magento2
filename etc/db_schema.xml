<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table comment="Braintree transaction details table" engine="innodb" name="braintree_transaction_details" resource="default">
        <column xsi:type="int" name="entity_id" identity="true" unsigned="true" nullable="false" comment="Entity ID"/>
        <column xsi:type="int" name="order_id" padding="10" unsigned="true" nullable="false" comment="Order Id"/>
        <column xsi:type="varchar" name="transaction_source" length="12" nullable="true" comment="Transaction Source"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <index referenceId="BRAINTREE_TRANSACTION_DETAILS_ORDER_ID" indexType="btree">
            <column name="order_id"/>
        </index>
        <constraint xsi:type="foreign" referenceId="BRAINTREE_TRANSACTION_DETAILS_ORDER_ID_SALES_ORDER_ENTITY_ID"
                    table="braintree_transaction_details" column="order_id"
                    referenceTable="sales_order" referenceColumn="entity_id" onDelete="CASCADE"/>
    </table>

    <table comment="Braintree credit rates" engine="innodb" name="braintree_credit_prices" resource="default">
        <column xsi:type="int" name="id" identity="true" nullable="false" unsigned="true" comment="Row ID"/>
        <column xsi:type="int" name="product_id" nullable="false" unsigned="true" comment="Product Id"/>
        <column xsi:type="int" name="term" nullable="false" padding="4" comment="Credit Term"/>
        <column xsi:type="decimal" name="monthly_payment" nullable="false" precision="12" scale="2" comment="Monthly Payment"/>
        <column xsi:type="decimal" name="instalment_rate" nullable="false" precision="12" scale="2" comment="Instalment Rate"/>
        <column xsi:type="decimal" name="cost_of_purchase" nullable="false" precision="12" scale="2" comment="Cost of purchase"/>
        <column xsi:type="decimal" name="total_inc_interest" nullable="false" precision="12" scale="2" comment="Total Inc Interest"/>

        <constraint referenceId="PRIMARY" xsi:type="primary">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="BRAINTREE_CREDIT_PRICES_PRODUCT_ID_TERM_UNQ">
            <column name="product_id"/>
            <column name="term"/>
        </constraint>
        <index referenceId="BRAINTREE_CREDIT_PRICES_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>
    </table>
</schema>
