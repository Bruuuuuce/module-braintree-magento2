<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table comment="braintree_transaction_details Table" engine="innodb" name="braintree_transaction_details" resource="default">
        <column xsi:type="int" name="entity_id" comment="Entity Id" unsigned="true" nullable="false" identity="true"/>
        <column xsi:type="int" name="order_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Order ID"/>
        <column xsi:type="text" name="transaction_source" comment="Transaction Source" nullable="true"/>
        <constraint referenceId="PRIMARY" xsi:type="primary">
            <column name="entity_id"/>
        </constraint>
        <index referenceId="BRAINTREE_TRANSACTION_DETAILS_ORDER_ID" indexType="btree">
            <column name="order_id"/>
        </index>
        <constraint xsi:type="foreign" referenceId="BRAINTREE_TRANSACTION_DETAILS_ORDER_ID_SALES_ORDER_ENTITY_ID" table="braintree_transaction_details"
                    column="order_id" referenceTable="sales_order" referenceColumn="entity_id" onDelete="CASCADE"/>

    </table>

    <table comment="braintree_credit_prices Table" engine="innodb" name="braintree_credit_prices" resource="default">
        <column name="id" comment="Row ID" identity="true" nullable="false" unsigned="true" xsi:type="int"/>
        <column name="product_id" comment="Product Id" nullable="false" unsigned="true" xsi:type="int"/>
        <column name="term" comment="Credit Term" nullable="true" padding="4" xsi:type="int"/>
        <column name="monthly_payment" comment="Monthly Payment" nullable="false" precision="12" scale="2" xsi:type="decimal"/>
        <column name="instalment_rate" comment="Instalment Rate" nullable="false" precision="12" scale="2" xsi:type="decimal"/>
        <column name="cost_of_purchase" comment="Cost of purchase" nullable="false" precision="12" scale="2" xsi:type="decimal"/>
        <column name="total_inc_interest" comment="Total Inc Interest" nullable="false" precision="12" scale="2" xsi:type="decimal"/>

        <constraint referenceId="PRIMARY" xsi:type="primary">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="BRAINTREE_CREDIT_PRICES_PRODUCT_ID_TERM_UNQ">
            <column name="product_id"/>
            <column name="term"/>
        </constraint>
        <index referenceId="BRAINTREE_CREDIT_PRICES_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>
    </table>
</schema>
